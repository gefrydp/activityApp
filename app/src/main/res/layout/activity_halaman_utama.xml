<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HalamanUtama">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/hiUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hai!"
            android:textSize="50sp"
            android:textColor="@color/purple_500"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/activityDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="30dp"
            android:text="Aktifitas Selesai"
            android:textSize="30sp"
            android:textColor="@color/purple_500"
            app:layout_constraintTop_toBottomOf="@+id/hiUser"
            tools:ignore="MissingConstraints" />
        <TextView
            android:id="@+id/listActivity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/grey"
            android:hint="(Belum ada aktifitas)"
            android:paddingHorizontal="60dp"
            app:layout_constraintTop_toBottomOf="@id/activityDone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/buttonHomePage"
        android:text="+"
        android:textSize="50sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/button_add"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        tools:ignore="MissingConstraints" />
</RelativeLayout>